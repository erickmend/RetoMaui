<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="RetoMaui.Views.HomeView"
             Title="HomeView">
    <VerticalStackLayout
        Padding="30,0"
            Spacing="25">

        <Label 
            Text="{Binding LanguageResourceManager[Home_Title],Mode=OneWay}"
            VerticalOptions="Center" 
            HorizontalOptions="Center" />

        <Label 
            Text="{Binding Title}"
            VerticalOptions="Center" 
            HorizontalOptions="Center" />


            <Button Text ="Go to Biometric" Command="{Binding GoToBiometricViewCommand}"></Button>
            <Button Text ="Go to maps" Command="{Binding GoToMapsViewCommand}"></Button>
            <Button Text ="Go to random joke view " Command="{Binding GoToRandomJokeViewCommand}"></Button>

    </VerticalStackLayout>
</ContentPage>