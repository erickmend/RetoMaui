<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="RetoMaui.Views.BiometricsFunctionView"
             Title="BiometricsFunctionView">
    <VerticalStackLayout
      Padding="30,0"
            Spacing="25">
  <Label 
            Text="Biometrics view"
            VerticalOptions="Center" 
            HorizontalOptions="Center" />


              <Label 
            Text="{Binding DataInfo}"
            VerticalOptions="Center" 
            HorizontalOptions="Center" />


            <Button 
            Text="{Binding LanguageResourceManager[Biometrics_Button],Mode=OneWay}"
              Command="{Binding AuthCommand}"></Button>
    </VerticalStackLayout>
</ContentPage>